<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bacode.hi.dao.MemberDao">
	<select id="selectAllMember"
		resultType="com.bacode.hi.vo.MemberVO">
		SELECT * FROM MEMBER
	</select>

	<select id="selectMember" resultType="com.bacode.hi.vo.MemberVO">
	
	<![CDATA[
		SELECT * FROM MEMBER where mem_name='김한선'
	]]>
	</select>

	<select id="selectOne" resultType="com.bacode.hi.vo.MemberVO"
		parameterType="String">
		SELECT * FROM MEMBER WHERE MEM_NAME=#{mem_name}
	</select>

	<insert id="insertMember" parameterType="com.bacode.hi.vo.MemberVO">

		INSERT INTO MEMBER
		(MEM_NAME,MEM_AGE,MEM_ADD)

		VALUES (#{mem_name},#{mem_age},#{mem_add} )
	</insert>


</mapper>